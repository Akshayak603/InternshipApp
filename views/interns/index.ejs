
<% layout('layouts/boilerplate')%>
<div  id="cluster-map"></div>
<h1 class="text-center indexAll"><%=tit%></h1>
<form class="form-inline mb-3" action="/interns" method="GET">
    <div class="form-group has-feedback">
      <label for="search"></label>
      <input class="form-control" type="text" name="search" placeholder="Search interns" autocomplete="on" />
      <span class="form-control-feedback" aria-hidden="true"></span>
    </div>
  </form>
<% for (let intern of interns){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=intern.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= intern.title %> </h5>
                    <p class="card-text"><%= intern.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= intern.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/interns/<%=intern._id%>">View <%=intern.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>

<script>
    const mapToken = '<%-process.env.MAP_TOKEN%>';
    const interns = { features: <%- JSON.stringify(interns) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>