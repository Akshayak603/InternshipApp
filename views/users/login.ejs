  
<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-3 col-xl-4 offset-xl-4">
            <div class="shadow-lg">
                <img src="https://images.unsplash.com/photo-1612635030599-c5cf4d025b51?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" alt="" class="card-img-top">
             <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <input type="checkbox" onclick="myFunction()"> Show?
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Login</button>
                    <!-- <a class="btn btn-danger" href="/auth/google">Sign in with Google</a> -->
                    <a href="/forgot" class="btn btn-sm text-muted">Forgot Password?</a>
                </form>
             </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/showP.js"></script>













